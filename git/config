# Git aliases from https://git.wiki.kernel.org/index.php/Aliases#Getting_pretty_logs
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[user]
	name = Christoph Jasinski
	email = christoph.jasinski@googlemail.com
[credential]
	helper = osxkeychain
[mergetool]
	keepBackup = true
	prompt = false
[alias]
	st = status --short
  stf = status
	ci = commit
	ca = commit --amend
	br = branch
	co = checkout
	df = diff
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --color
	who = shortlog -s --
  ps = push
[color]
  diff   = auto
  status = auto
  branch = auto
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[core]
	autocrlf = input
